<%= form_for(content) do |f| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-12">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group col-12">
    <%= f.label :label %>
    <%= f.text_field :label, class: "form-control form-control-lg" %>
  </div>

  <div class="form-group col-12">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control form-control-lg", rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
