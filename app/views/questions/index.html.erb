<div class="container" style="margin-top: 70px">
  <div class="row d-flex justify-content-between bd-highlight mb-3">
    <div class="page-header">
      <h1>Bot Prompts</h1>
    </div>
    <div class="p-2"><%= link_to 'Go to Inputs & Outputs', contents_path, class: 'btn btn-outline-primary' %></div>
  </div>


  <div class="row">
    <%= paginate @questions %>
    <table class="table">
      <thead>
        <tr>
          <th>Order</th>
          <th>Text</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.sort_order %></td>
            <td><%= link_to question.text, edit_question_path(question) %></td>
            <td><%= link_to 'Edit', edit_question_path(question) %></td>
            <td><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @questions %>

    <%= link_to 'New Prompt', new_question_path, class: "btn disabled btn-outline-success pull-right" %>
  </div>
  <p>
  </p>

</div>

