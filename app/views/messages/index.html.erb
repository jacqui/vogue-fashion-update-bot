<div class="container" style="margin-top: 70px">
  <div class="row">

    <div class="page-header">
      <h1>Received Messages <small>(<%= Message.count %>)</small></h1>
    </div>

  <%= paginate @messages %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Text</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.id, message %></td>
        <td><%= message.user.present? ? message.user.name : message.sender_id %></td>
        <td><%= message.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= paginate @messages %>
</div>
</div>
