<div class="container" style="margin-top: 70px">
  <div class="row">

    <div class="page-header">
      <h1>Brands <small>(<%= Brand.count %>)</small></h1>
    </div>

  <%= paginate @brands %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Shows</th>
      <th>Users Following</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to brand.title, edit_brand_path(brand) %></td>
        <td><%= brand.shows.count %></td>
        <td><%= brand.users.count %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= paginate @brands %>
  </div>
</div>
