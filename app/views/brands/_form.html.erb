<%= form_for(brand) do |f| %>
  <% if brand.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :slug %>
    <%= f.text_field :slug, class: "form-control", "aria-describedby": "slugHelp"  %>
    <small id="slugHelp" class="form-text text-muted">This is used to match articles and other coverage with this designer (aka tags).</small>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
