<div class="container" style="margin-top: 70px">
  <div class="row">
    <div class="page-header">
      <h1>Broadcast Messages</h1>
    </div>
  </div>

  <div class="row">
    <p><%= link_to 'New Broadcast Message', new_broadcast_path, class: "btn btn-success" %></p>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Type</th>
          <th>Content</th>
          <th>Recipients</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @broadcasts.each do |broadcast| %>
          <tr>
            <td><%= link_to broadcast.id, broadcast %></td>
            <td><%= link_to broadcast.template, broadcast %></td>
            <td><%= link_to broadcast.content, broadcast.content %></td>
            <td><%= broadcast.internal_only? ? "CNI only" : "All" %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <div class="row">
    <p><%= link_to 'New Broadcast Message', new_broadcast_path, class: "btn btn-success" %></p>
  </div>
</div>
